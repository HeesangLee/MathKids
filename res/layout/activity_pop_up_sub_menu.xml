<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:orientation="vertical" >
    <LinearLayout 
	    android:id="@+id/popup_title_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="true"
	    android:orientation="horizontal" >
	    <TextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="Addition"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_menu_textsize"
            android:paddingLeft="@dimen/padding"/>
	    <ImageView
            android:id="@+id/popup_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:scaleType="fitEnd"
            android:src="@drawable/popup_x" 
            android:clickable="true"
            android:background="@drawable/bg_clickable_light"
            android:onClick="onClickLEvent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_sub1_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/popup_sub1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:textColor="@color/popupSubText"
            android:textSize="@dimen/sub_menu_textsize"
            android:background="@drawable/bg_clickable_yellow"
            android:clickable="true"
            android:onClick="onClickLEvent"
            android:paddingLeft="@dimen/padding"/>
        <ImageView
            android:id="@+id/popup_sub1_go"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="fitEnd"
            android:src="@drawable/popup_go_activity" 
            android:clickable="true"
            android:background="@drawable/bg_clickable_yellow"
            android:onClick="onClickLEvent"/>
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/popup_sub2_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal" 
        android:background="@color/transparent">
        <TextView
            android:id="@+id/popup_sub2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:textColor="@color/popupSubText"
            android:textSize="@dimen/sub_menu_textsize"
            android:background="@drawable/bg_clickable_yellow"
            android:clickable="true"
            android:onClick="onClickLEvent"
            android:paddingLeft="@dimen/padding"/>
        <ImageView
            android:id="@+id/popup_sub2_go"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="fitEnd"
            android:src="@drawable/popup_go_activity" 
            android:clickable="true"
            android:background="@drawable/bg_clickable_yellow"
            android:onClick="onClickLEvent"/>
    </LinearLayout>
</LinearLayout>
